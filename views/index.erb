<% content_for :sidebar do %>
  <h1>Time to Focus</h1>
  <h2>Task: <%= current_user[:task][-1] %></h2>
  <h2>Focus Time: <%= current_user[:focus_time]  %> minutes</h2>
  <h2>Break Time: <%= current_user[:rest_time] %> minutes</h2>

  <h4> Done for now?</h4>
  <form method="get" action="/logout">
    <button type="submit">Log Out</button>
  </form>
<% end %>

<div id="timer-container">
  <h2>Countdown Timer</h2>
  <p id="timer-display">60</p> <!-- This is where the timer value will display -->
  <button id="startTimer" method='post' action='/start'>Start</button>
  <button id="stopTimer">Stop</button>
  <button id="resetTimer">Reset</button>
</div>


